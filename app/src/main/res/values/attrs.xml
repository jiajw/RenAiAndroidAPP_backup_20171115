<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 标题模板自定义属性 -->
    <declare-styleable name="TemplateTitle">
        <!-- 标题文案 -->
        <attr name="titleText" format="string" />
        <!-- 是否有back按钮 -->
        <attr name="canBack" format="boolean" />
        <!-- back按钮文案 -->
        <attr name="backText" format="string" />
        <!-- 右侧更多功能按钮图片 -->
        <attr name="moreImg" format="reference" />
        <!-- 右侧更多功能按钮文字 -->
        <attr name="moreText" format="string" />
    </declare-styleable>

    <!-- 条形控制控件自定义属性 -->
    <declare-styleable name="LineControllerView">
        <!-- 名称 -->
        <attr name="name" format="string" />
        <!-- 内容或当前状态 -->
        <attr name="content" format="string" />
        <!-- 是否是列表中最后一个 -->
        <attr name="isBottom" format="boolean" />
        <!-- 是否可以跳转 -->
        <attr name="canNav" format="boolean" />
        <!-- 是否是开关 -->
        <attr name="isSwitch" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ScrimInsetsView2">
        <attr name="insetForeground2" format="reference|color" />
    </declare-styleable>


    <declare-styleable name="PublishItemView">
        <!--条目名称-->
        <attr name="item_name" format="reference" />
        <!--条目类型-->
        <attr name="item_type" format="enum">
            <!--输入文本内容-->
            <enum name="input" value="1" />
            <!--不带剪头的item-->
            <enum name="choice" value="2" />
            <!--带有剪头的item-->
            <enum name="select" value="3" />
            <!--是否收费选择-->
            <enum name="charge" value="4" />
            <!--签到审核-->
            <enum name="sign" value="5" />
        </attr>
        <attr name="item_input_hint" format="reference" />
        <attr name="item_choice_hint" format="reference" />
        <attr name="item_select_hint" format="reference" />

    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SimpleTitleView">
        <attr name="title_content" format="reference" />
    </declare-styleable>
</resources>