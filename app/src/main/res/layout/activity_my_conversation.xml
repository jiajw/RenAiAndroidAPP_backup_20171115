<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hyphenate="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/main_gray_color">


    <include
        android:id="@+id/title_layout"
        layout="@layout/title" />


    <include android:id="@+id/xianer"
        layout="@layout/item_conversation_system"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>
    <include android:id="@+id/system"
        layout="@layout/item_conversation_system"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>
    <include android:id="@+id/activity"
        layout="@layout/item_conversation_system"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>


    <com.hyphenate.easeui.widget.EaseConversationList
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:cacheColorHint="#00000000"
        android:layout_marginTop="10dp"
        android:divider="@null"
        hyphenate:cvsListPrimaryTextSize="16sp"/>
    <!--<FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->
</LinearLayout>
