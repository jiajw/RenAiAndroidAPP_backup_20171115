<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/layout_special"
              android:orientation="vertical">


    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:paddingTop="13dp"
        android:text="提示"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp16"/>

    <RelativeLayout
        android:id="@+id/rl_customer_ui_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="left"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp14"/>
    </RelativeLayout>


    <View
        android:id="@+id/divider_view"
        style="@style/divide_view_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/pdp_42"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp14"/>

        <View
            android:id="@+id/horizontal_divide_view"
            android:layout_width="0.45dp"
            android:layout_height="@dimen/pdp_42"
            android:background="#a6a6a6"/>

        <TextView
            android:id="@+id/tv_btn_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/pdp_42"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp14"/>


    </LinearLayout>

</LinearLayout>
