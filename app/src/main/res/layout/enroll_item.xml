<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray_color"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/input_relayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/ic_input"
            android:drawablePadding="5dp" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/name_right"
            android:layout_toRightOf="@+id/tv_input"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="一句对公益的理解:"
            android:textSize="14sp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/tv_input_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:text="必填" />

        <LinearLayout
            android:id="@+id/divider_line_input"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:orientation="horizontal" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/multiple_relayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_multiple_image"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@drawable/ic_checkbox"
            android:drawablePadding="5dp"
            android:textColor="@color/gray_text_color"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_multiple"
            android:layout_toRightOf="@+id/tv_multiple_image"
            android:layout_toLeftOf="@+id/tv_multiple_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="参加的地点:"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_multiple_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_right"
            android:textColor="@color/gray_text_color"
            android:text="必填" />

        <LinearLayout
            android:id="@+id/divider_line_multiple"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:orientation="horizontal" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/textarea_relayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_textarea"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_textarea"
            android:drawablePadding="5dp" />


        <EditText
            android:id="@+id/et_textarea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:layout_toRightOf="@+id/tv_textarea"
            android:gravity="top"
            android:background="@null"
            android:hint="追加原因:"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textarea_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="非必填" />

        <LinearLayout
            android:id="@+id/divider_line_textarea"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:orientation="horizontal" />

    </RelativeLayout>

</LinearLayout>
