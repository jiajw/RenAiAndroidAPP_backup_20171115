<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/name_relayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/iv_name"
                        android:layout_width="32dp"
                        android:layout_height="33dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:drawableLeft="@drawable/ic_user"
                        android:drawablePadding="5dp"
                        />

                    <EditText
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/name_right"
                        android:layout_toRightOf="@+id/iv_name"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="姓名"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>


                    <TextView
                        android:id="@+id/name_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:drawablePadding="10dp"
                        android:text="必填" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/phone_relayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/iv_phone"
                        android:layout_width="32dp"
                        android:layout_height="33dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:drawableLeft="@drawable/ic_phon"
                        android:drawablePadding="5dp"
                        />

                    <EditText
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/phone_right"
                        android:layout_toRightOf="@+id/iv_phone"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="phone"
                        android:hint="电话"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>


                    <TextView
                        android:id="@+id/phone_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:drawablePadding="10dp"
                        android:text="必填" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>


                <RelativeLayout
                    android:id="@+id/add_relayout"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_textarea"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/ic_textarea"
                        android:drawablePadding="5dp" />


                    <EditText
                        android:id="@+id/et_reason"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp"
                        android:layout_toRightOf="@+id/tv_textarea"
                        android:gravity="top"
                        android:background="@null"
                        android:hint="追加原因:"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/add_tview_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:text="必填" />

                    <LinearLayout
                        android:id="@+id/divider_line_textarea"
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line"
                        android:orientation="horizontal" />

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/protocol_layout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                   >

                    <CheckBox
                        android:id="@+id/id_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:button="@drawable/checkbox_selector"
                        android:layout_centerVertical="true"
                        />


                    <TextView
                        android:id="@+id/protocol_text"
                        android:layout_toRightOf="@+id/id_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray_text_color"
                        android:text="@string/protocol_text"
                        />
                </RelativeLayout>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</LinearLayout>
