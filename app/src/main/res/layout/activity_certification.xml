<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c6e1f3"
                android:padding="16dp"
                android:text="请志愿者如实填写姓名,身份证号等信息，基金会为志愿者上保险使用"
                android:textColor="#1399f2"
                android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/name_tview"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="*姓名"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>


                <EditText
                    android:id="@+id/name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/name_tview"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="15sp"/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/identi_tview"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="*身份证"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>


                <EditText
                    android:id="@+id/identi_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/identi_tview"
                    android:background="@null"
                    android:hint="请输入身份证号"
                    android:maxLength="18"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_urgent_tag1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="*紧急联系人"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>


                <EditText
                    android:id="@+id/tv_urgent_people"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_urgent_tag1"
                    android:background="@null"
                    android:hint="请填写紧急联系人姓名"
                    android:maxLength="18"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_urgent_tag2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="*紧急联系人电话"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>


                <EditText
                    android:id="@+id/tv_urgent_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_urgent_tag2"
                    android:background="@null"
                    android:hint="请填写紧急联系人姓名"
                    android:maxLength="18"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tips_tview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/text_ident_error"
                    android:textColor="@color/login_red_color"
                    android:textSize="11sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="以下为非必填项"
                android:textColor="#999999"
                android:textSize="11sp"/>

            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/phone_tview"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号:"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>


                <EditText
                    android:id="@+id/phone_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/phone_tview"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/phone_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line"
                android:orientation="horizontal"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/degrees_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/record_tview"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="学历"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/record_school_tview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/record_arrow_right"
                    android:layout_toRightOf="@+id/record_tview"
                    android:hint="请选择"
                    android:paddingLeft="20dp"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/record_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/icon_address_arrows"
                    android:paddingRight="20dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line"/>


            <RelativeLayout
                android:id="@+id/work_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/work_tview"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="工作"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/do_work_tview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/work_arrow_right"
                    android:layout_toRightOf="@+id/work_tview"
                    android:hint="请输入当前从事工作"
                    android:paddingLeft="20dp"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/work_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/icon_address_arrows"
                    android:paddingRight="20dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:id="@+id/speciality_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/speci_tview"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="特长"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/speciality_tview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/speciality_arrow_right"
                    android:layout_toRightOf="@+id/speci_tview"
                    android:hint="请输入"
                    android:paddingLeft="20dp"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/speciality_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/icon_address_arrows"
                    android:paddingRight="20dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line"/>


            <RelativeLayout
                android:id="@+id/religion_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/relig_tview"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="宗教信仰"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/religion_tview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/religion_arrow_right"
                    android:layout_toRightOf="@+id/relig_tview"
                    android:hint="请选择"
                    android:paddingLeft="20dp"
                    android:textColor="@color/light_black_color"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/religion_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/icon_address_arrows"
                    android:paddingRight="20dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line"/>


            <RelativeLayout
                android:id="@+id/protocol_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                >

                <CheckBox
                    android:id="@+id/id_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:button="@drawable/checkbox_selector"
                    android:padding="@dimen/pdp_4"
                    android:paddingRight="@dimen/pdp_16"
                    />


                <TextView
                    android:id="@+id/protocol_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pdp_8"
                    android:layout_toRightOf="@+id/id_checkbox"
                    android:text="@string/service_protocol_text"
                    android:textColor="#1399f2"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/exit_btn_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/login_btn_bg"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>