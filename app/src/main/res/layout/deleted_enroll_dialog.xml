<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="280dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_validate_bg"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_fail" />

        <TextView
            android:id="@+id/prompt_tview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/quit_btn"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:text="确认要删除报名者吗？"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/quit_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_above="@+id/cancel_btn"
            android:layout_marginBottom="15dp"
            android:background="@drawable/login_validate_btn_normal"
            android:gravity="center_vertical|center_horizontal"
            android:text="确认删除"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/yellow_btn_bg"
            android:gravity="center_vertical|center_horizontal"
            android:text="先不删除"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <RelativeLayout
            android:id="@+id/closed_layout"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/iv_closed"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_close"
                android:padding="15dp" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>